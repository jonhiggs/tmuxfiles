#!/bin/bash
source $(dirname $0)/../lib/bargraph.inc
source $(dirname $0)/../lib/cpu.inc
source $(dirname $0)/../lib/memory.inc
source $(dirname $0)/../lib/power.inc

function int_to_float() {
  printf "%2.0f" $1
}

function help() {
  echo "OPTIONS:"
  echo "  --left"
  echo "  --right"
  exit 1
}

function left() {
  echo -n "left"
}

function right() {
  echo -n "C $(cpu_graph) "
  echo -n "M $(memory_graph) "
  echo -n "B $(battery_graph) "
  echo -n "| $($(dirname $0)/tmux_online) "
}

[[ $# -eq 0 ]] && help

case $1 in
  "--left")  left  ;;
  "--right") right ;;
  *)         help  ;;
esac

echo
