#!/usr/bin/env bash
source "$(dirname "$0")/../lib/bargraph.sh"
THRESHOLD=80

function _memory_pressure() {
  local used=$(
    memory_pressure             \
      | grep 'free percentage'  \
      | awk '{ print $5 }'      \
      | tr -d %
    )
  echo $(( 100 - ${used} ))
}

function used() {
  free \
    | awk '
      /^Mem/ {
        used = ($2 - $7);
        total = $2;
        print int((used / total) * 100)
      }
    '
}

function memory_graph() {
  bargraph $(_memory_pressure)
}

used=$(used)
if [[ ${used} -gt ${THRESHOLD} ]]; then
  color='#[fg=red]'
else
  color='#[fg=colour015]'
fi

printf "M%s%s#[fg=colour015]" ${color} "$(bargraph ${used})"

# vim: ft=sh
